<div class="container">
  <h1>New Game:</h1>

  <div class="blue-letters">
    <% @letters.each do |letter| %>
      <%= letter %>
    <% end %>
  </div>

  <div>
    <form action="/score" method='post'>
      <% hidden_field_tag :authenticity_token, form_authenticity_token %>
      <p>What's the longest word you can find?</p>
      <input type="text" name="word">
      <input type="submit">
    </form>
  </div>
</div>


